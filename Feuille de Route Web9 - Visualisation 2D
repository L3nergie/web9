<!DOCTYPE html>
<html>
<head>
    <title>Feuille de Route Web9 - Visualisation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
            font-size: 10px;
        }
        th {
            background-color: #f2f2f2;
            position: sticky;
            top: 0;
        }
        .group1 { background-color: #ffcccc; } /* 1-9 */
        .group2 { background-color: #ccffcc; } /* 11-19 */
        .group3 { background-color: #ccccff; } /* 21-28 */
    </style>
</head>
<body>
    <h1>Structure 28x28 face 3D web9 similaire web3</h1>
    <table id="structureTable">
        <thead>
            <tr>
                <th>Niveau</th>
                <!-- Les en-têtes seront générés par JavaScript -->
            </tr>
        </thead>
        <tbody>
            <!-- Le contenu sera généré par JavaScript -->
        </tbody>
    </table>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const table = document.getElementById('structureTable');
            const thead = table.querySelector('thead tr');
            const tbody = table.querySelector('tbody');

            // Créer les en-têtes de colonnes (1-28)
            for(let i = 1; i <= 28; i++) {
                const th = document.createElement('th');
                th.textContent = i;
                thead.appendChild(th);
            }

            // Fonction pour convertir un nombre en lettre selon la structure exacte
            function numberToLetter(num) {
                if (num >= 1 && num <= 9) {
                    return String.fromCharCode(96 + num); // 1-9 = a-i
                } else if (num >= 11 && num <= 19) {
                    return String.fromCharCode(96 + num - 1); // 11-19 = j-r (11=j, 12=k...19=r)
                } else if (num >= 21 && num <= 28) {
                    return String.fromCharCode(96 + num - 2); // 21-28 = s-z (21=s, 22=t...28=z)
                }
                return '';
            }

            // Dossiers principaux
            const mainFolders = [];
            for(let i = 1; i <= 9; i++) mainFolders.push(i);
            for(let i = 11; i <= 19; i++) mainFolders.push(i);
            for(let i = 21; i <= 28; i++) mainFolders.push(i);

            // Créer les lignes
            mainFolders.forEach(folder => {
                const tr = document.createElement('tr');
                
                // Déterminer la classe CSS
                let groupClass = '';
                if(folder <= 9) groupClass = 'group1';
                else if(folder <= 19) groupClass = 'group2';
                else groupClass = 'group3';
                tr.className = groupClass;

                // Ajouter la cellule du dossier principal
                const tdFolder = document.createElement('td');
                tdFolder.innerHTML = `<strong>${folder}<br><small>${numberToLetter(folder)}</small></strong>`;
                tr.appendChild(tdFolder);

                // Ajouter les cellules des sous-dossiers
                for(let i = 1; i <= 28; i++) {
                    const td = document.createElement('td');
                    td.innerHTML = `${folder}/${i}<br><small>${numberToLetter(folder)}/${numberToLetter(i)}</small>`;
                    tr.appendChild(td);
                }

                tbody.appendChild(tr);
            });
        });
    </script>
</body>
</html>
